# Combat System Script\n\n# This script handles combat interactions within the game.\n\nextends Node\n\nvar health: int = 100\nvar attack_power: int = 10\nvar defense_power: int = 5\n\nfunc _ready():\n    # Initialize combat system\n    print("Combat System Initialized")\n\nfunc attack(target: Node):\n    var damage = attack_power - target.defense_power\n    if damage < 0:\n        damage = 0\n    target.health -= damage\n    print("Attacked! Damage dealt: ", damage)\n\nfunc take_damage(amount: int):\n    health -= amount\n    if health <= 0:\n        die()\n\nfunc die():\n    print("Character has died.")